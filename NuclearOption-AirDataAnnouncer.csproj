<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>NO-AirDataAnnouncer</AssemblyName>
    <Description>GPWS and Air Data Callouts for Nuclear Option</Description>
    <Version>1.1.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    
    <!-- FIXES DUPLICATE ATTRIBUTE ERRORS -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    
    <!-- RESTORED LEGACY PROPERTIES -->
    <ProjectGuid>{2EC2BF19-52B3-4AA1-A091-AC0F165420B2}</ProjectGuid>
    <OutputType>Library</OutputType>
    <RootNamespace>NuclearOption_AirDataAnnouncer</RootNamespace>

    <!-- YOUR SPECIFIC GAME PATH -->
    <GameDir>F:\Programs\Steam\steamapps\common\Nuclear Option</GameDir>
  </PropertyGroup>

  <ItemGroup>
    <!-- BepInEx & Harmony -->
    <Reference Include="BepInEx">
      <HintPath>$(GameDir)\BepInEx\core\BepInEx.dll</HintPath>
    </Reference>
    <Reference Include="0Harmony">
      <HintPath>$(GameDir)\BepInEx\core\0Harmony.dll</HintPath>
    </Reference>

    <!-- Core Unity Libraries -->
    <Reference Include="UnityEngine">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\UnityEngine.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\UnityEngine.CoreModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.AudioModule">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\UnityEngine.AudioModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.PhysicsModule">
      <HintPath>F:\Programs\Steam\steamapps\common\Nuclear Option\NuclearOption_Data\Managed\UnityEngine.PhysicsModule.dll</HintPath>
    </Reference>
    
    <!-- REQUIRED FOR LOADING SOUNDS -->
    <Reference Include="UnityEngine.UnityWebRequestModule">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\UnityEngine.UnityWebRequestModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UnityWebRequestAudioModule">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\UnityEngine.UnityWebRequestAudioModule.dll</HintPath>
    </Reference>
	<Reference Include="UnityEngine.IMGUIModule">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\UnityEngine.IMGUIModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.TextRenderingModule">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\UnityEngine.TextRenderingModule.dll</HintPath>
    </Reference>

    <!-- Game Logic & Networking -->
    <Reference Include="Assembly-CSharp">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\Assembly-CSharp.dll</HintPath>
    </Reference>
    <Reference Include="Mirage">
      <HintPath>$(GameDir)\NuclearOption_Data\Managed\Mirage.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>